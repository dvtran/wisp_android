<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background = "@drawable/backmain" >

    <Button
        android:id="@+id/mapswitch"
        android:layout_width="wrap_content"
        android:layout_height="410dp"
        android:layout_alignBaseline="@+id/record"
        android:layout_alignBottom="@+id/record"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="56dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="22dp"
        android:background="@drawable/listenmenu" />

    <Button
        android:id="@+id/record"
        android:layout_width="wrap_content"
        android:layout_height="410dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_toLeftOf="@+id/mapswitch"
        android:background="@drawable/recordmenu" />

</RelativeLayout>
